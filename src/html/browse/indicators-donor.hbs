<!-- Donor Related Indicators Template -->
{{#grouped-each 3 data.indicators}}
    <div class="row">
        {{#each this }}
            <div class="col-sm-{{../../data.colIdx}} adam-entry-point-content">
                <div class="row">
                    <div class="col-xs-8 indicator-name"><span class="indicators-icons icojam_{{this.css}}"></span><p class="name">{{this.name}} ({{this.period}})<a href="#" name="{{this.footnote}}" class="anchor"><sup>{{this.footnote}}</sup></a></p></div>
                    <div class="col-xs-4 indicator-value"><p>{{[../transformers/commaseparator] this.value}} <span>{{this.unit}}</span></p></div>
                </div>
            </div>
        {{/each}}
    </div>
{{/grouped-each}}

<div class="row">
    <hr/>
</div>

<div class="row">
    {{> ../partials/indicators-partial data=data }}
</div>


